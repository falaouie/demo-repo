{
  "name": "silversystem",
  "version": "1.0.0",
  "description": "Silver System Development",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec electron .",
    "reset": "git reset --hard",
    "win-cert": "electron-builder create-self-signed-cert -p alawiyehcom",
    "release": "electron-builder -w -p onTagOrDraft"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/falaouie/master-electron.git"
  },
  "author": "Fadi Alaouie",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/falaouie/master-electron/issues"
  },
  "homepage": "https://github.com/falaouie/master-electron#readme",
  "devDependencies": {
    "electron": "^18.2.0",
    "nodemon": "^2.0.16"
  },
  "build": {
    "appId": "com.alawiyeh.devsilver",
    "copyright": "alawiyeh silver systems",
    "publish": {
      "provider": "github"
    },
    "mac" : {
      "category": "public.app-category.business",
      "target": "dmg"
    },
    "win" : {
      "certificateFile": "private/alawiyehcom.pfx",
      "certificatePassword": "",
      "verifyUpdateCodeSignature": false,
      "publisherName": "alawiyehcom"
    }
  }
}